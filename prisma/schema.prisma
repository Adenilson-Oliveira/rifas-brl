generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  telefone String  @unique
  email    String  @unique
  senha    String
  id_cota  Rifas[]

  @@map("user")
}

model Rifas {
  id        String  @id @default(uuid())
  cota      String  @unique
  vendido   Boolean
  reservado Boolean

  user    User?   @relation(fields: [user_id], references: [id])
  user_id String?

  @@map("rifas")
}
